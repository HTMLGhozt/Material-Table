{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "composite": true,
    "target": "es6",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
      "es2017.object"
    ]
  },
  "strict": true,
  "include": [
    "./src/**/*",
    "types"
  ],
  "exclude": [
    "config",
    "dist/*"
  ]
}
